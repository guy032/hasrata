{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
	"headers": [{
	    "source": "**",
	    "headers": [{
	        "key": "Cache-Control",
	        "value": "max-age=0, no-cache"
	    }],
	    "source": "**/*.js",
	    "headers": [{
	      "key": "Cache-Control",
	      "value": "max-age=0, no-cache"
	    }]
	}],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
